<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="dtable display responsive nowrap" cellspacing="0" width="100%">
  <thead>
      <tr class = "header">
      <th>Course</th>
      <th>Name</th>
      <th>Edit</th>
      <th>Register</th>
      <th>Delete</th>
      <th>Start Class</th>

    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_id %></td>
        <td><%= course.name %></td>
        <!-- <td><%= link_to 'Edit', edit_course_path(course) %></td> -->


        <td>
        <%=  link_to edit_course_path(course), class: "btn btn-primary " do %>
            <span class="glyphicon glyphicon-edit "></span>
        <% end %>
        </td>

        <!-- @registrations.inspect -->
        <% if (@registrations.find_by_course_id(course.id) == nil) %>
          
          <!-- <td><%= link_to 'Register', attend_path(course) %></td> -->


          <td>
          <%=  link_to attend_path(course), class: "btn btn-primary " do %>
            <span class="glyphicon glyphicon-plus "></span>
          <% end %>
          </td>


        <% else %>
          <td>Already Registered</td>
        <% end %>
  <!--       
        <td><%= link_to 'Destroy', course, method: :delete %></td>
    -->     
        <td>  
        <%= link_to course, method: :delete , class: "btn btn-primary " do %>
         <span class="glyphicon glyphicon-trash "></span>
         <% end %>
        </td>

        <% if (@registrations.find_by_course_id(course.id) == nil) %>
          <td></td>
        <% else %>
          
<!--           <% if (@user.role == "patient") %>
            <td><%= link_to 'Start Learning', start_teaching_path(course.id) %></td>
          <% else %>
            <td><%= link_to 'Start Teaching', start_teaching_path(course.id) %></td>
          <% end %> -->

          <td>
            <%=  link_to start_teaching_path(course.id), class: "btn btn-primary " do %>
              <span class="glyphicon glyphicon-facetime-video"></span>
            <% end %>
          </td>

        <% end %>


        



      </tr>
    <% end %>
  </tbody>
</table>

<br>

